#vhost template 

	<% if @port === 80 -%>
		NameVirtualHost *:80
	<% end -%>	

<VirtualHost *:<%= @port %> >

	ServerName <%= @domain %>
	DocumentRoot <%= @document_root %>

	<Directory/>
	Options FollwSymLinks
	AllowOverride None
	</Directory>
	<Directory <%= @document_root %>>
        Options Indexes FollwSymLinks MultiViews
        AllowOverride None
	Order allow,deny
	allow from all
        </Directory>

	
</VirtualHost>
